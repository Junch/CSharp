@using Dinner.Models
@model IEnumerable<User>

@{
    ViewBag.Title = "Users";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>All Users</h3>
    </div>

    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <thead>
                <tr>
                    <th class="text-right">Id</th>
                    <th>Name</th>
                    <th class="text-right">Email</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model) {
                    <tr>
                        <td class="text-right">@p.UserId</td>
                        <td>@Html.ActionLink(p.Name, "Edit", new {p.UserId}) </td>
                        <td class="text-right">@p.Email</td>
                        <td class="text-center">
                            @using (Html.BeginForm("Delete", "User")) {
                                @Html.Hidden("UserId", p.UserId)
                                <input type="submit" class="btn btn-danger" value="Delete" />
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add a new user", "Add", null,
            new { @class = "btn btn-default" })
    </div>
</div>